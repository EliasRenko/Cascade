{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "haxe",
			"args": "active configuration",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": "build",
			"label": "haxe: active configuration"
		},
		{
			"label": "Run",
			"type": "shell",
			"command": "haxelib",
			"args": [
				"run",
				"cascade",
				"-build",
				"web"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder:cascade}"
			}
		},
		{
			"label": "Run DRC",
			"type": "shell",
			"command": "haxelib",
			"args": [
				"run",
				"cascade",
				"-build",
				"js"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "C:/Users/Renko/Documents/Projects/Haxe/drc2d-sdk"
			}
		}
	]
}